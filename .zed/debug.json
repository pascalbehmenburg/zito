// see: https://zed.dev/docs/debugger
[
  {
    "label": "Build & debug binary (search in src)",
    "build": {
      "command": "cargo",
      "args": [
        "build"
      ]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/zito",
    "request": "launch",
    "args": [
      "find",
      "fn ",
      "./src",
      "-i",
      "./"
    ],
    "adapter": "CodeLLDB"
  }
]
